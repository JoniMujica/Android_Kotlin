<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Clase22" parent="Theme.MaterialComponents.DayNight.DarkActionBar"> <!-- NoActionBar deshabilita la barra de arriba por defecto-->
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/RojoPeligro</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Clase22.segunda">
        <item name="colorPrimary">@color/black</item>
    </style>
</resources>